// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette
{
  "edit_predictions": {
    "mode": "subtle",
    "copilot": {
      "proxy": null,
      "proxy_no_verify": null
    },
    "enabled_in_assistant": false
  },
  "assistant": {
    "default_model": {
      "provider": "anthropic",
      "model": "claude-3-7-sonnet-thinking-latest"
    },
    "version": "2"
  },
  "languages": {
    "Python": {
      "language_servers": ["pylsp"],
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "ruff",
          "arguments": ["format", "--stdin-filename", "{file_path}"]
        }
      }
    },
    "HTML": {
      "format_on_save": "off"
    },
    "CSV": {
      "soft_wrap": "none"
    },
    "TSV": {
      "soft_wrap": "none"
    },
    "JSON": {
      "soft_wrap": "none"
    },
    "pylsp": {
      "initialization_options": {
        "plugins": {
          "ruff": {
            "enabled": true,
            "lineLength": 77
          },
          "pyright": {
            "enabled": true
          }
        }
      }
    }
  },
  "features": {
    "edit_prediction_provider": "zed"
  },
  "cursor_blink": false,
  "buffer_font_family": "BerkeleyMono Nerd Font",
  "buffer_font_size": 17,
  "ui_font_family": "BerkeleyMono Nerd Font",
  "theme": {
    "mode": "dark",
    "light": "One Light",
    "dark": "One Dark"
  },
  "terminal": {
    "font_size": 14,
    "shell": "system"
  },
  "telemetry": {
    "diagnostics": false
  }
}
